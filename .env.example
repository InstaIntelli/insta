# ============================================
# INSTAINTELLI - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# APPLICATION
# ============================================
APP_NAME=InstaIntelli
APP_ENV=development
DEBUG=True
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# POSTGRESQL (Hassan - Auth & Users)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=instaintelli_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=instaintelli_db
POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# MONGODB (Sami - Posts)
# ============================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=instaintelli_user
MONGODB_PASSWORD=your-mongodb-password
MONGODB_DB=instaintelli_posts
MONGODB_URL=mongodb://${MONGODB_USER}:${MONGODB_PASSWORD}@${MONGODB_HOST}:${MONGODB_PORT}/${MONGODB_DB}?authSource=admin

# ============================================
# REDIS (Alisha - Caching)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ============================================
# MINIO / S3 (Sami - Object Storage)
# ============================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=instaintelli-media
MINIO_USE_SSL=False
S3_ENDPOINT_URL=http://${MINIO_ENDPOINT}:${MINIO_PORT}

# ============================================
# VECTOR DATABASE (Raza - Embeddings)
# ============================================
VECTOR_DB_TYPE=chroma
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=instaintelli_embeddings
FAISS_INDEX_PATH=./faiss_indexes

# ============================================
# OPENAI / LLM (Raza - AI Processing)
# ============================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
LLM_API_BASE_URL=https://api.openai.com/v1

# ============================================
# RAG CONFIGURATION (Alisha - Semantic Search)
# ============================================
RAG_TOP_K_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50

# ============================================
# FRONTEND
# ============================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# ============================================
# ANALYTICS (Optional - Parquet)
# ============================================
ANALYTICS_ENABLED=False
ANALYTICS_PARQUET_PATH=./analytics/parquet
